{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://solidjskills.dev/contracts/review-output.schema.json",
  "title": "ReviewOutput",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "summary",
    "findings",
    "open_questions",
    "validation_commands",
    "citations"
  ],
  "properties": {
    "summary": {
      "type": "string",
      "minLength": 15
    },
    "findings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "severity",
          "file",
          "issue",
          "impact",
          "recommendation"
        ],
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low"
            ]
          },
          "file": {
            "type": "string",
            "minLength": 1
          },
          "line": {
            "type": "integer",
            "minimum": 1
          },
          "issue": {
            "type": "string",
            "minLength": 10
          },
          "impact": {
            "type": "string",
            "minLength": 10
          },
          "recommendation": {
            "type": "string",
            "minLength": 10
          }
        }
      }
    },
    "open_questions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "validation_commands": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 3
      }
    },
    "citations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/citation"
      }
    }
  },
  "definitions": {
    "citation": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "doc_id",
        "claim"
      ],
      "properties": {
        "doc_id": {
          "type": "string",
          "minLength": 3
        },
        "claim": {
          "type": "string",
          "minLength": 10
        }
      }
    }
  }
}
