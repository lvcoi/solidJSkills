{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://solidjskills.dev/contracts/refactor-plan-output.schema.json",
  "title": "RefactorPlanOutput",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "summary",
    "invariants",
    "stepwise_plan",
    "risk_controls",
    "rollback_strategy",
    "verification_checklist",
    "validation_commands",
    "citations"
  ],
  "properties": {
    "summary": {
      "type": "string",
      "minLength": 20
    },
    "invariants": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "stepwise_plan": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "risk_controls": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "rollback_strategy": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "verification_checklist": {
      "type": "array",
      "minItems": 5,
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "validation_commands": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 3
      }
    },
    "citations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/citation"
      }
    }
  },
  "definitions": {
    "citation": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "doc_id",
        "claim"
      ],
      "properties": {
        "doc_id": {
          "type": "string",
          "minLength": 3
        },
        "claim": {
          "type": "string",
          "minLength": 10
        }
      }
    }
  }
}
